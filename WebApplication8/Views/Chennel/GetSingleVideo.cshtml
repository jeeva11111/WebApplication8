@model WebApplication8.Models.Video.Video;

<!DOCTYPE html>
<html>
<head>
    <title>Video Page</title>
</head>
<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
        @Html.Partial("~/Views/Shared/_Sidebar.cshtml");
        <!-- Sidebar -->
        <!-- wrapper-->
        <div id="content-wrapper">
            <div class="container-fluid pb-0">
                <div class="video-block section-padding">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="single-video-left">
                                @if (Model != null)
                                {
                                    <div class="single-video">
                                        <video width="100%" controls>
                                            <source src="data:@Model.VideoType;base64,@Convert.ToBase64String(Model.VideoData)" type="@Model.VideoType">
                                            Your browser does not support the video tag.
                                        </video>
                                    </div>
                                    <div class="single-video-title box mb-3">
                                        <h2>@Model.VideoTitle</h2>
                                        <p class="mb-0"><i class="fas fa-eye"></i> 2,729,347 views</p>
                                    </div>
                                    <div class="single-video-author box mb-3">
                                        <div class="float-right"><button class="btn btn-danger" type="button">Subscribe <strong>1.4M</strong></button> <button class="btn btn btn-outline-danger" type="button"><i class="fas fa-bell"></i></button></div>
                                        <img class="img-fluid" src="img/s4.png" alt="">
                                        <p><a href="#"><strong>@Model.Id</strong></a> <span title="" data-placement="top" data-toggle="tooltip" data-original-title="Verified"><i class="fas fa-check-circle text-success"></i></span></p>
                                        <small>Published on @Model.CreatedDate</small>
                                    </div>

                                    <div class="single-video-info-content box mb-3">
                                        <h6>Posted:</h6>
                                        <p>@Model.CreatedDate</p>
                                        <h6>Category : @Model.Category</h6>
                                        <p>@Model.VideoTitle</p>
                                        <h6>About : @Model.Description</h6>
                                        <p class="tags mb-0">
                                            <span><a href="#">Coding </a></span>
                                            <span><a href="#"> Dotnet </a></span>
                                            <span><a href="#">MVC</a></span>
                                            <span><a href="#">1080P</a></span>
                                            <span><a href="#">720p</a></span>
                                            <span><a href="#"> 7+</a></span>
                                        </p>
                                    </div>
                                }
                                else
                                {
                                    <p>Error: Video not found.</p>
                                }
                            </div>
                        </div>

                        <div id="side-videoloder" class="col-md-4">
                            <!-- Up Next section will be loaded here by site.js -->
                        </div>

                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container">
                    <div class="row no-gutters">
                        <div class="col-lg-6 col-sm-6">
                            <p class="mt-1 mb-0">
                                <strong class="text-dark">Vidoe</strong>.
                                <small class="mt-0 mb-0">
                                    <a class="text-primary" target="_blank" href="/">Home</a>
                                </small>
                            </p>
                        </div>
                        <div class="col-lg-6 col-sm-6 text-right">
                            <div class="app">
                                <a href="#"><img alt="" src="img/google.png"></a>
                                <a href="#"><img alt="" src="img/apple.png"></a>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Include the site.js file -->
    <script src="site.js"></script>
</body>
</html>
