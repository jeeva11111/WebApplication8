@model IEnumerable<WebApplication8.Models.Notes.NotePads>


<button type="button" class="btn btn-primary" onclick="AddNodeModel()">
    Launch demo modal
</button>

<div id="holder"></div>

<table class="table">
    <thead>
        <tr>
            <th>Task Name</th>
            <th>Color</th>
            <th>Description</th>
            <th>Project Title</th>
            <th>Folder Image</th>
            <th>Date Time</th>
            <th>Starred</th>
            <td>Edit</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
            <tr>
                <td>@note.TaskName</td>
                <td style="background-color : @note.Color">@note.Color</td>
                <td>@note.Description</td>
                <td>@note.ProjectTitle</td>
                <td>
                    @if (!string.IsNullOrEmpty(note.ImageType))
                    {
                        <img src="data:@note.ImageType;base64,@Convert.ToBase64String(note.ImageData)" alt="Folder Image" style="max-width: 100px;" />

                    }
                <td>@note.DateTime.ToString("MM/dd/yyyy")</td>
                <td>@(note.Starred ? "Yes" : "No")</td>
                <td class="text-center">
                    <button class="btn btn-outline-primary" onclick="UpdateNotesModel(@note.Id)">Edit</button>

                </td>
            </tr>
            @*  @Html.Partial("_AddNodeModel",note) *@
        }
    </tbody>
</table>
