@model WebApplication8.Models.LocalModels.QuizViewModel;
<!-- Sidebar -->
@Html.Partial("~/Views/Shared/_Sidebar.cshtml")
<!-- Sidebar -->

<h1 class="badge text-center">Quiz</h1>


<div class="container">
    <select id="SelectDept">
        <option>Select options</option>
        <option value="Android">Android</option>
        <option value="iOS">IOS</option>
        <option value="Dot Net">Dot net</option>
        <option value="Testing">Tester</option>
    </select>
</div>

@{
    Html.RenderPartial("~/Views/Shared/QuizModels/_ListOfOptions.cshtml");
}

<hr />
<div class="quiz-container m-4 d-flex">
    <div id="question-container" class="text-center">
        <p id="question-text"></p>
        <div id="answer-buttons"></div>
    </div>
    <div id="controls-container">
        <button id="start-button" class="btn-outline-primary">Start Quiz</button>
        <div id="timer-container">
            <span id="timer-text">Time Left: <span id="timer">0</span></span>
        </div>
    </div>
</div>

 